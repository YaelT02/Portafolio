@model IEnumerable<Proyecto>

@if (Model is not null)
{
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenURL" class="card-img-top" style="width:auto; height:150px;" alt="imagen del proyecto" />
                        <div class="card-body" style="background-color:#cc66f8">
                            <h5 class="card-title text-white" style="text-align:center">@proyecto.Titulo</h5>
                            <p class="card-text text-white" style="text-align:center">@proyecto.Descripcion</p>
                        </div>
                        <div class="card-footer" style="background-color:#9932f0;display: flex; justify-content:center">
                            <a class="btn btn-outline-dark" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">
                                Visitar
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
